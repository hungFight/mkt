    "react-apexcharts": "^1.4.1",
    "react-dom": "^18.2.0",
    "react-i18next": "^13.0.2",
    "react-perfect-scrollbar": "^1.5.8",
    "react-popper": "^2.3.0",
    "react-redux": "^8.1.1",
    "react-router-dom": "^6.14.2",
